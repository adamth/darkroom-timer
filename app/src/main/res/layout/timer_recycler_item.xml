<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryRed"
                android:id="@+id/parent_layout"
                android:paddingBottom="10sp"
                android:paddingTop="10sp">

    <TextView
            android:text="01:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:id="@+id/timer_value_text_view"
            android:textSize="100sp"
            android:textColor="@color/colorWhiteRed"
            android:fontFamily="@font/rubik_light"
            android:theme="@style/AppTheme.RED"/>

    <TextView
            android:text="Developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer_name_text_view"
            android:layout_below="@+id/timer_value_text_view"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhiteRed"
            android:textSize="24sp"
            android:fontFamily="@font/rubik_bold"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_play_circle_outline_white_63dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:id="@+id/action_image"
            android:contentDescription="@string/action_image_description"
            android:layout_centerVertical="true"
            android:theme="@style/AppTheme.RED"/>

</RelativeLayout>